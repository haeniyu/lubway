<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

  <mapper namespace="CookieDAO">
  
  <resultMap type="cookie" id="cookieResult">
		<id property="no" column="NO" />
		<result property="code" column="code" />
		<result property="name" column="name" />
		<result property="price" column="price" />
		<result property="filePath" column="filePath" />
	</resultMap>
  	<insert id="insertCookie" parameterType="cookie">
  		insert into cookie(code, name, price,img)
  		values(#{code},#{name}, #{price},#{filePath})
  	</insert>
  	<update id="updateCookie" parameterType="cookie">
  		update cookie set code=#{code}, name=#{name}, price=#{price} 
  		where no=#{no}
  	</update>
  	<delete id="deleteCookie" parameterType="cookie">
  		delete from cookie where no=#{no}
  	</delete>
  	<select id="selectCookie" parameterType="cookie">
  		SELECT * FROM NOTICE_BOARD WHERE NO=#{no}
  	</select>
  	<select id="selectListCookie" parameterType="cookie">
  		SELECT * FROM NOTICE_BOARD WHERE NO=#{no}
  	</select>
  </mapper>