<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="NoticeDAO">
	<resultMap type="notice" id="noticeResult">
		<id property="no" column="NO"/>
		<result property="title" column="title"/>
		<result property="content" column="content"/>
		<result property="regDate" column="regDate"/>
		<result property="fix" column="fix"/>
	</resultMap>

	<insert id="insertNotice" parameterType="notice">
		INSERT INTO NOTICE_BOARD(title, content) VALUES(#{title},#{content})
	</insert>
	
	<update id="updateNotice">
		UPDATE NOTICE_BOARD SET TITLE=#{title}, content=#{content} WHERE NO=#{no}
	</update>
	
	<delete id="deleteNotice">
		DELETE NOTICE_BOARD WHERE NO=#{no}
	</delete>
	
	<select id="getNotice" resultType="notice">
		SELECT * FROM NOTICE_BOARD WHERE NO=#{no}
	</select>
	
	<select id="getNoticeList" resultMap="noticeResult">
		SELECT * FROM NOTICE_BOARD
		WHERE TITLE LIKE '%'||#{searchKeyword}||'%'
		ORDER BY NO DESC
	</select>
</mapper>