<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

  <mapper namespace="MorningDAO">
  	<resultMap type="morning" id="morningResult">
		<id property="no" column="NO" />
		<result property="code" column="code" />
		<result property="name" column="name" />
		<result property="engname" column="engname" />
		<result property="price" column="price" />
		<result property="category" column="category"/>
		<result property="content" column="content"/>
		<result property="filePath" column="filePath" />
	</resultMap>
  	<insert id="insertMorning" parameterType="morning">
  		insert into morning( code, name,engname, price, content, category, img)
  		values(#{code},#{name}, #{engname}, #{price},#{engname},#{content}, #{category}, #{filePath})
  	</insert>
  	<update id="updateMorning" parameterType="morning">
  		update morning set code=#{code}, name=#{name},engname=#{engname}, price=#{price}, category#{category} 
  		where no=#{no}
  	</update>
  	<delete id="deleteMorning" parameterType="morning">
  		delete from morning where no=#{no}
  	</delete>
  	<select id="selectMorning" resultType="morning">
  		SELECT * FROM morning WHERE NO=#{no}
  	</select>
  	<select id="selectListMorning" resultType="morning">
  		SELECT * FROM morning
  	</select>
  </mapper>